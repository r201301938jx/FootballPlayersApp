<h1>Edit Player</h1>
<%= form_for(@player, url: "/players/#{@player.id}") do |f| %>
  <h4>Name</h4>
  <%= f.text_field :name %>
  <h4>Age</h4>
  <%= f.number_field :age %>
  <h4>Team</h4>
  <%= f.text_field :team, min:16, max:60 %>
  <h4>Nationality</h4>
  <%= f.text_field :nationality %>
  <h4>Position</h4>
  <%= f.select :position, ['FW','MF','DF','GK'],{include_blank:'Please select'} %>
  <br>
  <%= f.submit 'Edit' %>
<% end %>